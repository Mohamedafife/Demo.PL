<div class="mt-5 alert alert-light">
     @TempData["Message"]
</div>
 
<h1>All Employee</h1>
<br />
<br />
<form asp-action="Index">
    <div class="row  align-content-center justify-content-center">
        <div class="col-8">
            <input type="text" name="SearchValue" class="form-control" />
        </div>
        <div col-4>
            <input type="submit" value="Search" class="btn-danger" />
        </div>
    </div>
<br />
</form>
<a asp-controller="Employee" asp-action="Create" class="btn btn-primary">Create New Employee</a>
<br />
@if (Model.Count() > 0)
{
    <table class="mt-3 table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(E => E.Name)</th>
                <th>@Html.DisplayNameFor(E => E.Age)</th>
                <th>@Html.DisplayNameFor(E => E.Address)</th>
                 <th>@Html.DisplayNameFor(E => E.Image)</th>
                <th>@Html.DisplayNameFor(E => E.IsValed)</th>
                <th>@Html.DisplayNameFor(E => E.Email)</th>
                <th>@Html.DisplayNameFor(E => E.Salary)</th>
                <th>@Html.DisplayNameFor(E => E.PhoneNumber)</th>
                <th>@Html.DisplayNameFor(E => E.Hairdata)</th>
                <th>Detailes</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.Name</td>
                    <td>@employee.Age</td>
                    <td>@employee.Address</td>
                    <td>
                        <img src="~/Files/Images/@employee.ImageName" alt="Employee Image" class = "img-fluid" height="30" width="30"/>
                    </td>
                    <td>@employee.IsValed</td>
                    <td>@employee.Email</td>
                    <td>@employee.Salary</td>
                    <td>@employee.PhoneNumber</td>
                    <td>@employee.Hairdata</td>


                    <td>
                        <a asp-action="Details" asp-route-id="@employee.Id" class="btn btn-warning">
                            <i class="fas fa-eye"></i>   Details
                        </a>
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@employee.Id" class="btn btn-success">
                            <i class="fas fa-edit"></i>   Update
                        </a>
                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@employee.Id" class="btn btn-danger">
                            <i class="fas fa-trach"></i>   Delete
                        </a>
                    </td>

                   
                </tr>

            }
        </tbody>
    </table>
}
else
{
    <div class="mt-3 alert alert-danger">
        <h3>There No Employee!</h3>
    </div>
}

