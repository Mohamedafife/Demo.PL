@model IEnumerable<EmployeeViewModel>
@{
    ViewData["Title"] = "Index";
}
@*<div class="mt-5 alert alert-light">
    @ViewData["Message"]
</div>*@
@*<div class="mt-5 alert alert-light">
    @ViewBag.Message
