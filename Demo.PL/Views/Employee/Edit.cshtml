@model EmployeeViewModel
@{
    ViewData["Title"] = "Edit";
}
@{
    var departments = new SelectList( ViewBag.department, "id", "name");
}
<h1>Edit Employee</h1>
<form asp-action="Edit" enctype="multipart/form-data">
    <div class="form-group">
        <label class="col-form-label" asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Age"></label>
        <input class="form-control" asp-for="Age" />
        <span asp-validation-for="Age"></span>
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Address"></label>
        <input class="form-control" asp-for="Address" />
        <span asp-validation-for="Address"></span>
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="IsValed"></label>
        <input class="form-control" asp-for="IsValed" />
        <span asp-validation-for="IsValed"></span>
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Email"></label>
        <input class="form-control" asp-for="Email" />
        <span asp-validation-for="Email"></span>
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Salary"></label>
        <input class="form-control" asp-for="Salary" />
        <span asp-validation-for="Salary"></span>
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="PhoneNumber"></label>
        <input class="form-control" asp-for="PhoneNumber" />
        <span asp-validation-for="PhoneNumber"></span>
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Hairdata"></label>
        <input class="form-control" asp-for="Hairdata" />
        <span asp-validation-for="Hairdata"></span>
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="DepartmentId"></label>
        <select class="form-control" asp-for="DepartmentId" asp-items="departments">
            <option>__Select Department__</option>
        </select>
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Image"></label>
        <input class="form-control" asp-for="Image" />
    </div>
    <input type="submit" value="Save" class="btn btn-danger" />|
    <a asp-controller="Employee" asp-action="Index" class="btn btn-light">Bact To Master Page</a>
</form>
@section _ValidationSection
