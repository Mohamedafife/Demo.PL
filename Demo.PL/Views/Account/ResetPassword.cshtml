@model ResetPasswordViewModel
@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<h1>Reset Password</h1>
<div class="main-agileinfo">
	<div class="agileits-top">
		<form method="post" asp-action="ResetPassword">
			<div asp-validation-summary="All"></div>
			<input class="text email" asp-for="NewPassword" placeholder="NewPassword" required="">
			<input class="text" asp-for="ConfirmPassword" placeholder=" ConfirmPassword" required="">
			<input type="submit" value="ResetPassword">
		</form>
	</div>
</div>

